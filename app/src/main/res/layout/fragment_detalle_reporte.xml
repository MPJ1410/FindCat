<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentos.DetalleReporteFragment"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/frgDetImgFoto"
            android:layout_width="match_parent"
            android:layout_marginVertical="20dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:text="@string/itmlblNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/frgDetlblNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/frgDetlblNombre"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/itmlblTipo"
            android:layout_marginVertical="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/frgDetlblTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/frgDetlblTipo"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/itmlblDescripcion"
            android:layout_marginVertical="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/frgDetlblDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/frgMasTxtDescripcion"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/itmlblUbicacion"
            android:layout_marginVertical="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/frgDetlblUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/frgDetlblUbicacion"
            android:autoLink="web"
            android:linksClickable="true"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/itmlblComentar"
            android:layout_marginVertical="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/frgDetTxtComentar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/frgDetBtnComentar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="@string/itmBtnComentar"/>

        </LinearLayout>






    </LinearLayout>

</androidx.cardview.widget.CardView>